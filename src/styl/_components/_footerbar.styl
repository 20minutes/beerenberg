// Styles for basic footer.
//
// Markup: footerbar.twig
//
// Styleguide Components.Footer
.footerbar
    _p(.25 2)
    {clearfix}
    {fontSecondary}
    clear both
    width 100%
    min-height _rem(30px)
    border-top 3px solid $color-footer
    background-color $color-default
    color $color-footer

    a
        color $color-base-lighten

        &:hover
            text-decoration underline
