/* Site top navigation bar */
/* @TODO: remove this file (duplicate of _navbar.styl */
.headerbar

    .sticky
        fixed top 0
        z-index 20
        width 100%
        box-shadow 0 2px 4px -2px $color-base

    ul
        @extends .list-type-none
        background-color white
        height 4.8rem
        line-height 4.8rem

    li
        width 6rem
        float right

        &:first-child
            float left

    a
        display block
        color $color-base
        font-size 1.8rem
        text-align center

        em
            display none

.brand
    width 4.8rem
    background-color $color-default
    // TODO: explain why !important
    font-size 3.6rem!important // @stylint ignore
    color $color-white!important // @stylint ignore
