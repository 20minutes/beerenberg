// Tabs
//
// - **Default:** adds a navigation within a section
// - **Breaking news:** is used to disaply hot news on a page
//
// Markup: tabs.twig
//
// Styleguide Components.tabs
.tabs-wrapper
    overflow hidden
    position relative
    height 36px


    .menu-scroll
        top 50%
        z-index 10
        transform translateY(-50%)

.tabs
    @extends .list-type-none
    @extends .clearfix
    display inline-block
    height 32px
    overflow hidden
    line-height @height

    a
        position relative
        z-index 2
        color $color-tertiary

.tabs-item
.tabs-name
    @extends .font-secondary
    position relative
    height 32px
    margin 0 0 0 36px
    float left

    &:after
        z-index 1
        content ""
        absolute top 0 right -12px
        display block
        width 32px
        height 32px
        box-shadow 2px -2px 2px rgba(0, 0, 0, 0.25)
        transform rotate(45deg)

.tabs-name
    color #ffffff
    margin-left 0
    padding-left 12px

    span
        position relative
        z-index 2

/*
 * Specials [
 * ---------------------------------------------------------------------------------------- */
.breakingnews
    display table
    width 100%
    height 72px

    .tabs-alert
    .tabs-name
    .tabs-close
        float none
        display table-cell
        vertical-align middle
        height 70px
        line-height 1.2

    .tabs-name
        /*width 100px*/
        background-color $color-highlight
        font-size 1.4rem
        color #ffffff

        &:after
            width 50px
            height 50px
            top 10px
            right -24px
            background-color $color-highlight

    .tabs-alert
        padding-left 42px
        font-family $font-headings
        font-weight bold
        color $color-highlight
        font-size 1.4rem

        @media screen and (min-width: 48em)
            font-size 2.4rem

        a
            color $color-highlight
            line-height 1

            &:hover
                text-decoration underline

    .tabs-close
        width 18px

        a
            display block
            width $w=18px
            height $w
            border-radius 0.5 * $w
            background $color-highlight
            color #ffffff
            line-height 1
            text-align center

/* ----------------------------------------------------------------------------------------
 * ] Specials */

/*
 * Theme [
 * ---------------------------------------------------------------------------------------- */
for $item in $colors
    .tabs.{$item[0]} .is-active a, .tabs.{$item[0]} a:hover
        @extends .color-{$item}

    .tabs.{$item[0]} .tabs-name
        @extends $.bg-{$item}
        @extends $.border-color-{$item}

    .tabs.{$item[0]} .tabs-name:after
        @extends $.bg-{$item}

/* ----------------------------------------------------------------------------------------
 * ] Theme */

