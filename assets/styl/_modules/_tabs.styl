// Tabs
//
// - **Default:** adds a navigation within a section
// - **Breaking news:** is used to display hot news on a page
//
// Markup: tabs.twig
//
// Styleguide Components.tabs
.tabs-wrapper
    overflow hidden
    position relative
    height calc(2.2em + 4px)

    .menu-scroll
        top 50%
        z-index 10
        transform translateY(-50%)

.tabs
    {clearfix}
    margin 0
    padding 0
    display inline-block
    height 2.2em
    overflow hidden
    line-height @height
    list-style none

    a
        position relative
        z-index: $zIndex.base + 1
        color $color-tertiary

    &-item
        {fontSecondary}
        font-size .65em
        position relative
        margin 0 0 0 3em
        float left

        &:after
            z-index: $zIndex.base
            content ''
            position absolute
            display block
            height 2.5em
            width 2.5em
            transform rotate(45deg)
            top calc(50% - 1.25em)
            right -1.25em
            box-shadow 2px -2px 2px rgba(0, 0, 0, .25)

    &-name
        @extends .tabs-item
        color $color-white
        margin-left 0
        padding-left 1.1em
        box-shadow 2px -2px 2px rgba(0, 0, 0, .25)

        span
            position relative
            z-index: $zIndex.base + 1

// Special rules for Breaking News
.breakingnews
    width 100%
    height 3.1em
    display table

    > a
        display block
        overflow hidden

    .tabs-alert
    .tabs-name
    .tabs-close
        height 3.1em
        line-height 1.2em
        float none
        display table-cell
        vertical-align middle

    .tabs-name
    .tabs-item
        &:after
            height 3.2em
            width 3.2em
            top calc(50% - 1.6em)
            right -1.6em
            background-color $color-highlight

    .tabs-name
        background-color $color-highlight
        font-size .86em
        color $color-white

    .tabs-alert
        _fontload($font-headings)
        padding-left 2.5em
        padding-right .5em
        height 3.1em
        font-weight bold
        color $color-highlight

        @media $breakpoints.md
            font-size 2.4rem
            padding-left 2em
            height 2.5em

        a
            color $color-highlight
            line-height 1

            &:hover
                text-decoration underline

    .tabs-close
        width 18px

        a
            display block
            width $w=18px
            height $w
            border-radius .5 * $w
            background $color-highlight
            color $color-white
            line-height 1
            text-align center

// Theme colors
for key, value in $colors
    .tabs.{key} .is-active a, .tabs.{key} a:hover
        color value

    .tabs.{key} .tabs-name
    .tabs.{key} .tabs-name:after
        background-color value
