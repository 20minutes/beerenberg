// Tabs
//
// - **Default:** adds a navigation within a section
// - **Breaking news:** is used to disaply hot news on a page
//
// Markup: tabs.twig
//
// Styleguide Components.tabs
.tabs-wrapper
    overflow hidden
    position relative
    height 36px

    .menu-scroll
        top 50%
        z-index 10
        transform translateY(-50%)

.tabs
    {clearfix}
    margin 0
    padding 0
    display inline-block
    height 32px
    overflow hidden
    line-height @height
    list-style none

    a
        position relative
        z-index 2
        color $color-tertiary

.tabs-item
    {fontSecondary}
    position relative
    height 32px
    margin 0 0 0 36px
    float left

    &:after
        z-index 1
        content ''
        position absolute
        top 0
        right -12px
        display block
        width 32px
        height 32px
        box-shadow 2px -2px 2px rgba(0, 0, 0, .25)
        transform rotate(45deg)

.tabs-name
    @extends .tabs-item
    color $color-white
    margin-left 0
    padding-left 12px

    span
        position relative
        z-index 2

/*
 * Specials [
 * ---------------------------------------------------------------------------------------- */
.breakingnews
    display table
    width 100%
    height 72px

    > a
        display block

    .tabs-alert
    .tabs-name
    .tabs-close
        float none
        display table-cell
        vertical-align middle
        height 70px
        line-height 1.2

    .tabs-name
        background-color $color-highlight
        font-size 1.4rem
        color $color-white

        &:after
            width 50px
            height 50px
            top 10px
            right -24px
            background-color $color-highlight

    .tabs-alert
        padding-left 42px
        font-family $font-headings
        font-weight bold
        color $color-highlight
        font-size 1.4rem

        @media screen and (min-width: 48em)
            font-size 2.4rem

        a
            color $color-highlight
            line-height 1

            &:hover
                text-decoration underline

    .tabs-close
        width 18px

        a
            display block
            width $w=18px
            height $w
            border-radius .5 * $w
            background $color-highlight
            color $color-white
            line-height 1
            text-align center

/* ----------------------------------------------------------------------------------------
 * ] Specials */

/*
 * Theme [
 * ---------------------------------------------------------------------------------------- */
for key, value in $colors
    .tabs.{key} .is-active a, .tabs.{key} a:hover
        color value

    .tabs.{key} .tabs-name
        border 1px solid value
        background-color value

    .tabs.{key} .tabs-name:after
        background-color value
/* ----------------------------------------------------------------------------------------
 * ] Theme */

