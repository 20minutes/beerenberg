// Loading
//
// Loading animation is inspired from Tobias Ahlin's [Spinkit](http://tobiasahlin.com/spinkit) animations.
//
// Markup: loading.twig
//
// Styleguide Components.Loading
.spinner
    margin 0 auto
    width 9.6rem
    text-align center


.spinner
    > span
        display inline-block
        width 1.8rem
        height @width
        margin 0 .3rem
        border-radius 100%

.spinner:not(.spinner-small)
    > span
        background-color $color-base

.spinner-small
    > span
        width .9rem
        height @width
        background-color $color-base

.spinner .bounce1
.spinner .bounce2
.spinner .bounce3
    animation bouncedelay 1.4s infinite ease-in-out
    /* Prevent first frame from flickering when animation starts */
    animation-fill-mode both


.spinner .bounce1
    animation-delay -.32s


.spinner .bounce2
    animation-delay -.16s


@-webkit-keyframes bouncedelay
    0%, 80%, 100%
        transform scale(0)
    40%
        transform scale(1)


@keyframes bouncedelay
    0%, 80%, 100%
        transform scale(0)

    40%
        transform scale(1)
