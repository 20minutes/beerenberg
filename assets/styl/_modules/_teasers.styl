// Teaser
//
// _modules/_borders.styl
//
// A teaser is a block of content displaying:
// - main illustration
// - a label
// - a title
// - a description
//
// Styleguide Components.Teaser
.teaser
    @extend .pa2

.teaser-headline
    font-family $font-secondary
    font-weight bold
    font-size 1.1rem
    text-transform uppercase

.teaser-title
    font-family $font-headings
    font-weight bold
    line-height 1.2

.teaser-summary
    padding-top .3rem

.native
    background-color $color-native
