// Navbar
//
// Display a navigation bar at the top of the page.
// Colette comes with a [headroom.js](http://wicky.nillia.ms/headroom.js/) dependency to handle navbar show/hide behavior on scroll.
//
// Markup: navbar.twig
//
// Styleguide Components.navbar
.navbar
    {clearfix}
    position fixed
    top 0
    z-index 20
    width 100%
    height 4.8rem
    box-shadow 0 2px 4px -2px $color-base
    background-color $color-white

    ul
        height inherit
        list-style none
        margin 0
        padding 0

        a
            padding 0 1.8rem
            color $color-base
            display flex
            background-color rgba($color-bg-base, 0)
            transition background-color .2s

            svg
                width 1.5em
                height @width
                margin auto

            span
                margin auto

            &:hover
                background-color $color-bg-base

    li
        float left
        height inherit
        display flex

    &-brand
        float left
        padding 0 .6rem
        height inherit
        color $color-default
        display flex
        background-color rgba($color-bg-base, 0)
        transition background-color .2s

        svg
            width 2.2em
            height @width
            margin auto

        &:hover
            background-color $color-bg-base
