<form xmlns="http://www.w3.org/1999/html">
    <div class="form-field-widget pb2">
        <p>
            <label for="text_1">Text</label>
            <input type="text" id="text_11" placeholder="placeholder" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="text_2">Text readonly</label>
            <input type="text" id="text_2" readonly value="readonly" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="text_3">Text disabled</label>
            <input type="text" id="text_3" disabled value="disabled" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="email">Email</label>
            <input type="email" id="email" value="me@me.com" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="password">Password</label>
            <input type="password" id="password" value="password" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="url">URL</label>
            <input type="url" id="url" value="url.com" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="time">Time</label>
            <input type="time" id="time" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="date">Date</label>
            <input type="date" id="date" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="tel">Tel</label>
            <input type="tel" id="tel" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="number">Number</label>
            <input type="number" id="number" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="search">Search</label>
            <input type="search" id="search" />
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="select">Select</label>
            <select id="select">
                <option>option 1</option>
                <option>option 2</option>
                <option>option 3</option>
            </select>
        </p>
    </div>
    <div class="form-field-widget pb2">
        <p>
            <label for="textarea">Textarea</label>
            <textarea id="textarea" row="4" cols="50" />default value</textarea>
        </p>
    </div>
</form>

<p>Busy/loading form:</p>
