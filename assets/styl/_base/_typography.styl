// Typography
//
// See default typographic styles below:
//
// Markup: typography.twig
//
// Weight: 2
//
// Styleguide Basics.Typography
html
    font-family sans-serif // 2
    font-size 62.5% // 1
    text-size-adjust 100% // 3

body
    _fontload($font-base)
    color $color-base
    font-size 1.6em
    line-height 1.5
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale /* FF */

a
    color $color-base
    text-decoration none

    &:focus
        // Dotted outline on every focus elements (remove Chrome shadow)
        outline thin dotted

for $i in 1..6
    h{$i}
        _fontload($font-headings)
        font-weight bold
        line-height 1.2

h1
    font-size 2.1rem

h2
    font-size 1.6rem

h3
    font-size 1.4rem

// list
ul
ol
    _mt(1)
    _mb(1)
    padding 0 0 0 1.1em // dots alignment

/* Reset of margin/padding on nested elements */
li p
li ul
    margin-bottom 0
    margin-top 0
    padding-bottom 0
    padding-top 0

//
hr
    clear both
    background-color $color-base
    border 0
    height 1px
    margin 2.4rem 0 4.8rem

tt
code
kbd
samp
pre
    border-radius .2rem
    font-size 1.2em /* em value to make it relative to the body text size */

small
    font-size .75em

blockquote
    position relative
    padding .75em 1.5em 0
    font-family $font-secondary
    font-style italic
    line-height 1.3

    &:before
        position absolute
        top 0
        left 0
        content '\201C'
        font-family 'Georgia', 'Times New Roman', Times, serif
        font-size 3em
        color $color-secondary

/* Tables */
table
    border-collapse collapse
    border-spacing 0
    border-width 0
    empty-cells show
    background-color $color-bg-base

thead
    tr
        background-color $color-base
        color white

td
th
    word-wrap break-word
    hyphens none
    border-width 0
    padding .6rem 1.2rem

/* (1) Important : [title] attribut must be present
 * (2) For IE 8/9, Safari 5, and Chrome : they have not default style for this tag
 */
abbr[title] // 1
    text-decoration none
    border-bottom 1px dotted // 2

/* Avoid text overflow forcing return to new line */
textarea
table
td
th
code
pre
samp
div
p
    word-wrap break-word
    hyphens none

/* (1) On conserve les espaces / retours à la ligne autant que possible */
code
pre
samp
    white-space pre-wrap // 1

/* Un "début" de responsive : largeur maxi (donc hauteur auto) de certains élements */
img
table
td
blockquote
code
pre
textarea
input
    height auto
    max-width 100%

// iframe should be block by default
iframe
    display block

code
kbd
samp
    font-family monospace, monospace
    font-size 1em

figure
    margin 0
    padding 0

