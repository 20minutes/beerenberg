// Typography
//
// See default typographic styles below:
//
// Markup: typography.twig
//
// Weight: 2
//
// Styleguide Basics.Typography
html
    font-family sans-serif // 2
    font-size 62.5% // 1
    text-size-adjust 100% // 3

body
    color $color-base
    font-family $font-base
    font-size 1.6em
    line-height 1.5
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale /* FF */

a
    color $color-base

h1
    font-size 2.1rem

h2
    font-size 1.6rem

h3
    font-size 1.4rem

for $i in 1..6
    h{$i}
        font-family $font-headings
        font-weight bold
        line-height 1.2


hr
    clear both
    background-color $color-base
    border 0
    height 1px
    margin 2.4rem 0 4.8rem

tt
code
kbd
samp
pre
    border-radius .2rem
    font-size 1.2em /* em value to make it relative to the body text size */

small
    font-size .75em

blockquote
    position relative
    padding .75em 1.5em 0
    font-family $font-secondary
    font-style italic
    line-height 1.3

    &:before
        position absolute
        top 0
        left 0
        content '\201C'
        font-family 'Georgia', Times New Roman, Times, serif
        font-size 3em
        color $color-secondary

/* Tables */
table
    border-collapse collapse
    border-spacing 0
    border-width 0
    empty-cells show
    background-color $color-bg-base

thead
    tr
        background-color $color-base
        color white

td
th

    border-width 0
    padding .6rem 1.2rem

