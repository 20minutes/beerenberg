// Skins
//
// Add a skin over the image of a content block on listing pages, and depending on the skin, modify the teaser text and/or background colors.
// Note that:
// - the `.skin-#` class is applied on a content preview selector (which may contain `.media` | `.teaser` | `.box-counter` | `.box-footer` children)
// - the skin is applied on a `<figure class="media">` tag,
// - the image must be placed within a `<p>` or a `<div>` tag for icon skins
//
// .skin-blog        - Text skin: "blog", text color: community
// .skin-chat        - Text skin: "chat"
// .skin-exclusive   - Text skin: "exclusif", text color: highlight
// .skin-lastminute  - Text skin: "dernière minute", text color: white, background-color: highlight
// .skin-live        - Text skin: "live", headline color: highlight
// .skin-partner     - Text skin: "partenaire"
// .skin-people      - Text skin: "people"
// .skin-quiz        - Text skin: "quiz", title and description color: community
// .skin-weird       - Text skin: "t'as vu"
// .skin-gallery     - Icon skin: 'images'
// .skin-video       - Icon skin: 'play'
//
// Markup: skin.twig
//
// Styleguide Theme.skins

/* Text skins */
.skin
    &-blog
    &-chat
    &-exclusive
    &-lastminute
    &-live
    &-partner
    &-people
    &-quiz
    &-weird
        .media
            &:before
                {fontSecondary}
                position absolute
                top 0
                left 0
                z-index 2
                padding 0 1em
                height 2.8em
                line-height @height
                color $color-white
                text-align center
                box-shadow: .27em .27em 0px .27em rgba(0, 0, 0, 0.3);

    &-blog
        .media
            &:before
                content 'blog'
                background-color $color-community

        .teaser
            &-headline
            &-title
            &-summary
                color $color-community

    &-chat
        .media
            &:before
                content 'chat'
                background-color $color-community

    &-exclusive
        .media
            &:before
                content 'exclusif'
                background-color $color-highlight

        .teaser
            &-headline
            &-title
            &-summary
                color $color-highlight

    &-lastminute
        // overrides .box background
        background-color $color-highlight!important // @stylint ignore
        box-shadow inset 0 0 0 1px $color-white // keep white borders despite of the red background

        .box-counter
            background-color $color-white

        .media
            &:before
                content 'dernière minute'
                background-color $color-highlight

        .teaser
            &-headline
            &-title
            &-summary
                color $color-white

    &-live
        .media
            &:before
                content 'live'
                background-color $color-highlight

        .teaser-headline
            color $color-highlight

    &-partner
        .media
            &:before
                content 'Partenaire'
                background-color $color-native
                color $color-base

    &-people
        .media
            &:before
                content 'People'
                background-color $color-entertainment

    &-quiz
        .media
            &:before
                content 'quiz'
                background-color $color-community

        .teaser
            &-headline
            &-title
            &-summary
                color $color-community

    &-weird
        .media
            &:before
                content 'T’as vu'
                background-color $color-weird

    /* Icon skins */
    &-gallery
    &-video
        .media > p:first-child
        .media > div:first-child

            &:before
                display block
                position absolute
                z-index 1
                content ''
                bottom .5em
                left .5em
                padding .5em
                width 3.5em
                height 2.4em
                border-radius .3em
                background-color rgba(0, 0, 0, 0.5);
                background-repeat no-repeat
                background-size 2.4em
                background-position center center

    &-video
        .media
            > p:first-child
            > div:first-child
                &:before
                    background-image _inlineSvg('<svg viewBox="0 0 32 32" width="32" height="32"><path fill="#fff" d="M16 0c-8.837 0-16 7.163-16 16s7.163 16 16 16 16-7.163 16-16-7.163-16-16-16zM16 29c-7.18 0-13-5.82-13-13s5.82-13 13-13 13 5.82 13 13-5.82 13-13 13zM12 9l12 7-12 7z"></path></svg>')

    &-gallery
        .media
            > p:first-child
            > div:first-child
                &:before
                    background-image _inlineSvg('<svg viewBox="0 0 32 32" width="32" height="32"><path fill="#fff" d="M4 8.666v20.001h28.001v-20.001h-28.001zM29.999 25.335l-3.997-6.669-4.535 3.781-3.467-5.779-11.998 10.001v-16.001h23.998v14.668zM7.999 15.667c0 1.655 1.344 2.998 3 2.998 1.658 0 3-1.343 3-2.998 0-1.658-1.342-3-3-3-1.656 0-3 1.342-3 3zM28 4.667h-27.999v19.999h1.999v-17.998h26.001v-2.001z"></path></svg>')

