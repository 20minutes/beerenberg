[data-icon]
[data-icon-after]
    &:before
    &:after
        font-family $font-icon
        speak none
        font-weight normal
        font-variant normal
        text-transform none
        line-height 1

    a&
        display block

    em
        display none

    p
    ul
        overflow hidden

for key, value in $icons
    [data-icon={key}]:before
    [data-icon-after={key}]:after
        content value
