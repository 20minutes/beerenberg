// Spaces
//
// _layout/_spaces.styl
//
// A set of margins and paddings, based on a 1.2rem gutter width.
// A margin | padding is a multiple (from 1 to 6) of the gutter width,
// and can be applied either on top | right | bottom | left | all side(s) of an element.
//
// .pt[n]     - padding-top: [n] x 1.2rem
// .pr[n]     - padding-right: [n] x 1.2rem
// .pb[n]     - padding-bottom: [n] x 1.2rem
// .pl[n]     - padding-left: [n] x 1.2rem
// .pa[n]     - padding: [n] x 1.2rem
// .mt[n]     - margin-top: [n] x 1.2rem
// .mr[n]     - margin-right: [n] x 1.2rem
// .mb[n]     - margin-bottom: [n] x 1.2rem
// .ml[n]     - margin-left: [n] x 1.2rem
// .ma[n]     - margin: [n] x 1.2rem
//
// Styleguide Layout.Spaces

/* Create mixins to add gutter-based paddings and margins */
/* @TODO: allow breakpoint option */
_pa(i)
    padding: i * $gutter * .1rem

_pt(i)
    padding-top: i * $gutter * .1rem

_pr(i)
    padding-right: i * $gutter * .1rem

_pb(i)
    padding-bottom: i * $gutter * .1rem

_pl(i)
    padding-left: i * $gutter * .1rem

_ma(i)
    margin: i * $gutter * .1rem

_mt(i)
    margin-top: i * $gutter * .1rem

_mr(i)
    margin-right: i * $gutter * .1rem

_mb(i)
    margin-bottom: i * $gutter * .1rem

_ml(i)
    margin-left: i * $gutter * .1rem

/* Set a few default helpers */
for i in (0..6)
    .pa{i}
        _pa(i)

    .pt{i}
        _pt(i)

    .pr{i}
        _pr(i)

    .pb{i}
        _pb(i)

    .pl{i}
        _pl(i)

    .ma{i}
        _ma(i)

    .mt{i}
        _mt(i)

    .mr{i}
        _mr(i)

    .mb{i}
        _mb(i)

    .ml{i}
        _ml(i)
