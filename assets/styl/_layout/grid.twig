    <div class="col-md-8 clearfix">
        <div class="col-sm-6">Col1 (col-sm-6)</div>
        <div class="col-sm-6">Col2 (col-sm-6)</div>
    </div>
    <div class="col-md-4">Col3 (col-md-4)</div>
</div>
