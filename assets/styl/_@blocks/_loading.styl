// {loading}
//
// display an animated svg loader
//
// Advice: use it in a pseudo element (`:before` or `:after)
//
// **Usage**
// ```stylus
// /* my_file.styl */
// .foo
//     {loading}
// ```
// will compile to
// ```css
// /* my_file.css */
// .foo {
//     display:block;
//     background-image:url("data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 90 30' width='90' height='30'%3E%3Cstyle%3Ecircle{fill:%234c4d4e;-webkit-animation:bouncedelay 1.4s infinite ease-in-out;animation:bouncedelay 1.4s infinite ease-in-out;-webkit-animation-fill-mode:both;animation-fill-mode:both;-webkit-transform-origin:50%25 50%25;-ms-transform-origin:50%25 50%25;transform-origin:50%25 50%25}.bounce1{-webkit-animation-delay:-.32s;animation-delay:-.32s}.bounce2{-webkit-animation-delay:-.16s;animation-delay:-.16s}@-webkit-keyframes bouncedelay{0%25,80%25,to{-webkit-transform:scale(0);transform:scale(0)}40%25{-webkit-transform:scale(1);transform:scale(1)}}@keyframes bouncedelay{0%25,80%25,to{-webkit-transform:scale(0);transform:scale(0)}40%25{-webkit-transform:scale(1);transform:scale(1)}}%3C/style%3E%3Ccircle cx='15' cy='15' r='10' class='bounce1'/%3E%3Ccircle cx='45' cy='15' r='10' class='bounce2'/%3E%3Ccircle cx='75' cy='15' r='10' class='bounce3'/%3E%3C/svg%3E");
