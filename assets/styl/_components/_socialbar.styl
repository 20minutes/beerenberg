// Socialbar
//
// Display a set of social buttons.
//
// Markup: socialbar.twig
//
// Styleguide Components.socialbar

.socialbar
    display flex
    flex-wrap wrap
    padding 0
    margin 0
    list-style-type none

    li
        _m(.25 .5 .25)
        text-align center

        &:first-child
            _ml(0)

        &:last-child
            _mr(0)
