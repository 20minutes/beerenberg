// Can use `.color-â€¦` helpers on list
//
// Markup: tabpanel.twig
//
// Styleguide Components.TabPanel
.tabpanel
    &-list
        display flex
        margin 0
        padding 0
        list-style none

        .no-js &
            display none

        &-tab
            _p(1 0)
            flex 1
            position relative
            text-align center
            background $color-base-lighten
            border 1px solid $color-borders
            border-right-color transparent
            color $color-base
            font-family $fontstack-secondary
            text-transform uppercase
            cursor pointer

            &:last-child
                border-right-color $color-borders

            &[aria-expanded=true]
                color currentColor
                background-color $color-white
                border-color transparent
                font-weight 700

                &:before
                    content ''
                    position absolute
                    top -1px
                    bottom -1px
                    left -1px
                    pointer-events none
                    background currentColor
                    width 3px

            &[aria-disabled=true]
                background $color-secondary
                cursor initial

    &-body
        _p(1)

        &[aria-hidden=true]
            display none

    &.box
        border-width 0

        > .tabpanel-list
            :first-child
                border-radius $radius 0 0 0
            :last-child
                border-radius 0 $radius 0 0
