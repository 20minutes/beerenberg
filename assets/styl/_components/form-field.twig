{% set id = 'form-field-' ~ modifier_class|default('default')|replace({' ': '_'}) %}
<form action="#">
    <div class="form-field">
        <p>
            <label for="{{ id }}">Label</label>
            <input class="{{ modifier_class }}" type="text" id="{{ id }}" />
        </p>
    </div>
</form>
