/* Defines styles for buttons => may be declined for each section color */
.btn
    @extends .font-secondary
    display inline-block
    padding 0 12px
    height 30px
    box-shadow inset 0 0 1px #f1f1f1
    border-radius 3px
    border-top 1px solid #c7c7c7
    border-right 1px solid #878787
    border-bottom 1px solid #878787
    border-left 1px solid #c7c7c7
    background #eeeeee /* lte ie8 */
    background linear-gradient(bottom, #c7c7c7, #eeeeee) /* default */
    rem 1.1
    line-height 30px
    text-transform uppercase
    text-shadow 1px 1px #f1f1f1
    color $color-base /* default */

    &:hover
        text-decoration none!important
        background #c7c7c7 /* lte i8 */
        background linear-gradient(bottom, #eeeeee, #c7c7c7) /* default */

    a
        color $color-base /* default */

.btn-default
    box-shadow inset 0 0 1px $color-default
    border-color $color-default #063062 #063062 $color-default
    background $color-default /* lte ie8 */
    background linear-gradient(bottom, #063062, $color-default)
    color #ffffff!important
    text-shadow 1px 1px #063062

    &:hover
        background #063062 /* lte ie8 */
        background linear-gradient(bottom, $color-default, #063062)

.btn-community
    box-shadow inset 0 0 1px $color-community
    border-color $color-community #62062f #62062f $color-community
    background $color-community /* lte ie8 */
    background linear-gradient(bottom, #62062f, $color-community)
    color #ffffff
    text-shadow 1px 1px #62062f

    &:hover
        background #62062f /* lte ie8 */
        background linear-gradient(bottom, $color-community, #62062f)
        color #ffffff

.btn-highlight
    box-shadow inset 0 0 1px $color-highlight
    border-color $color-highlight #95130c #95130c $color-highlight
    background $color-highlight /* lte ie8 */
    background linear-gradient(bottom, #95130c, $color-highlight)
    color #ffffff
    text-shadow 1px 1px #95130c

    &:hover
        background #95130c /* lte ie8 */
        background linear-gradient(bottom, $color-community, #95130c)