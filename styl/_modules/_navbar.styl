/* Site top navigation bar */
.navbar
    @extends .clearfix
    fixed top 0
    z-index 20
    width 100%
    height 4.8rem
    box-shadow 0px 2px 4px -2px $color-base
    background-color white
    line-height @height

    ul
        @extends .list-type-none
        height inherit

        li
            float left

        a
            display block
            padding 0 1.8rem
            color $color-base
            text-align center
            transition background-color .2s

            &:hover
                background-color $color-bg-base

.navbar-brand
    float left
    padding 0 .6rem
    height inherit
    background-color $color-default
    font-size 3.6rem
    color white
