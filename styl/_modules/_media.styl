.media
    position relative

    img
        width 100%
        height auto

    figcaption
        padding-top 6px
        font-size .85em
        color $color-tertiary
        line-height 1

.media-credit
    display inline-block
    absolute right 0 top 0
    padding .2rem .6rem
    background-color rgba(0, 0, 0, .6)
    font-family $font-secondary
    text-transform uppercase
    font-size 1.1rem
    font-weight bold
    color white

.media-blank
    display block
    position relative
    background-color lighten($color-default, 80%)
    color rgba(255, 255, 255, 0.5)

    &:before
        display block
        content 'L'
        font-family '20mn'
        font-size 12rem
        line-height 18rem
        text-align center
