<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ options.title }}</title>

    <meta name="description" content="">
    <meta name="generator" content="kss-node">
    <meta name="viewport" content="width=device-width">

    {{ styles|raw }}

</head>
<body>
{#
  Inject svg symboles
  use this inline style to prevent bug from display:none with svg mask and gradients
#}
<div style="height:0;width:0;position:absolute;visibility:hidden;overflow:hidden">{% include '../dist/svg/svg.svg' %}</div>
<div id="co_wrapper">
    {# top navigation #}
    <nav class="navbar">
        <div class="co_content clearfix">
            <a href="./" class="navbar-brand co_brand" data-icon="logo"><em>Retour à l'accueil</em></a>
            <ul>
                <li><a href="./">About</a></li>
                {% for menu_item in menu %}
                    <li>
                        <a href="section-{{ menu_item.referenceURI }}.html">{{ menu_item.header }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </nav>

    {# page content #}
    <article role="main" id="co_page" class="pt4 pb6">
        {# Display each section, in order. #}
        {% for section in sections %}
            {% set sectionElement = loop.first ? 'div' : 'section' %}
            <{{ sectionElement }} id="kssref-{{ section.referenceURI }}" class="co_section co_section-depth-{{ section.depth }} {% if section.depth > 1 %} co_content{% endif %} pl2 pr2">


            {# section header #}
            {% set headerElement = (section.depth > 6) ? 'h6' : 'h' ~ section.depth %}
            <{{ headerElement }} class="co_section-h{{ section.depth }}{% if 1 == section.depth %} co_content pl2 pr2{% endif %}">
                {% if section.depth > 1 %}
                    <a href="#kssref-{{ section.referenceURI }}">
                {% endif %}
                    <strong class="co_section-ref">{{ section.referenceNumber }}</strong>
                    {{ section.header }}
                {% if section.depth > 1 %}
                    </a>
                {% endif %}
            </{{ headerElement }}>


            {# source #}
            {% if section.sourceFile.name and section.depth > 1 %}
                <div class="co_subsection clearfix">
                    <p class="co_subsection-title col-md-3">Source</p>
                    <p class="co_subsection-content co_source col-md-9">
                        <code>{{ section.sourceFile.name }}{% if section.sourceFile.line > 1 %}, Line: line {{ section.sourceFile.line }}{% endif %}</code>
                    </p>
                </div>
            {% endif %}


            {# section description #}
            {% if section.description %}
                <div class="co_subsection clearfix">
                    <p class="co_subsection-title col-md-3">Description</p>
                    <div class="co_subsection-content col-md-9">
                        {{ section.description|raw }}
                    </div>
                </div>
            {% endif %}


            {# section colors #}
            {% if section.colors %}
                <ul class="co_colors clearfix">
                    {% kssColors section.colors %}
                    {# Available data, but not used in the template:
                        -> color.rgb [r|g|b]
                        -> color.hsl [h|s|l]
                        -> color.desc
                    #}
                    <li class="box">
                        <div class="co_colors-demo" style="background-color:{{color.hex}}"></div>
                        <p class="co_colors-name">{{ color.name }}</p>
                        <p class="co_colors-hex">{{ color.hex }}</p>
                    </li>
                    {% endkssColors %}
                </ul>
            {% endif %}


            {# section icons #}
            {% if section.icons %}
                <ul class="co_icons clearfix">
                    {% kssIcons section.icons %}
                    {# Available data, but not used in the template:
                        -> icon.character
                        -> icon.desc
                    #}
                    <li class="box">
                        <div class="co_icons-demo">{{ icon.character }}</div>
                        <div><span class="co_icons-name">{{ icon.name }}</span></div>
                    </li>
                    {% endkssIcons %}
                </ul>
            {% endif %}


            {# section example #}
            {% if section.example %}
                {# example / default styling #}
                <div class="co_subsection clearfix">
                    <p class="co_subsection-title col-md-3">
                        {% if section.modifiers is not empty %}
                            Default styling
                        {% else %}
                            Example
                        {% endif %}

                    </p>
                    <div class="co_subsection-content col-md-9 clearfix mb1">
                        {{ section.example|raw }}
                    </div>
                </div>

                {# modifiers #}
                {% if section.modifiers is not empty %}
                    <div class="co_subsection clearfix">
                        <p class="co_subsection-title col-md-3">Modifiers</p>
                        <div class="co_subsection-content co_modifier col-md-9 clearfix mb2">
                            {% for modifier in section.modifiers %}
                                <p><code>{{ modifier.name }}</code></p>
                                <p>{{ modifier.description|raw }}</p>
                                <div class="co_modifier-example clearfix mb3">
                                    {{ modifier.markup|raw }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                {% endif %}

                {# markup #}
                {% if section.markup %}
                    <div class="co_subsection clearfix">
                        <p class="co_subsection-title col-md-3">Code</p>
                        <div class="co_subsection-content co_markup col-md-9">
                            <button class="btn">click to expand</button>
                            <pre class="co_markup pa1 prettyprint linenums lang-html"><code data-language="html">{{ section.markup|escape('html') }}</code></pre>
                        </div>
                    </div>
                {% endif %}
            {% endif %}


            {# parameters #}
            {% for parameter in section.parameters %}
                {% if loop.first %}
                    <div class="co_parameters-title">Parameters:</div>
                    <ul class="co_parameters">
                {% endif %}
                <li class="co_parameters-item">
                    <div class="co_parameters-name"><code>{{ parameter.name }}</code></div>
                    <div class="co_parameters-description">
                        {{ parameter.description|raw }}
                        {% if parameter.defaultValue %}
                            <div class="co_parameters-default-value">
                                Defaults to: <code>{{ parameter.defaultValue }}</code>
                            </div>
                        {% endif %}
                    </div>
                </li>
                {% if loop.last %}
                    </ul>
                {% endif %}
            {% endfor %}

        </{{ sectionElement }}>
        {% endfor %}
    </article>

    {# footer #}
    <footer class="co_footer">
        <div class="co_content clearfix">
            <p class="float-left">© Copyright <a href="http://www.20minutes.fr">20 Minutes</a></p>
            <p class="float-right"><a href="https://twitter.com/Tech20Minutes" class="ml2" data-icon="twitter"> Follow us </a></p>
            <p class="float-right"><a href="https://github.com/20minutes/colette" class="ml2" data-icon="github"> View it on Github</a></p>
        </div>
    </footer>
</div>
<!-- scripts -->
<script src="kss-assets/prettify.js"></script>
<script>
    prettyPrint();
</script>
{{ scripts|raw }}
</body>
</html>
